{
	"lint" : true,
	"concat" : true,
	"uglify" : true,
	"rename" : true,

	"input" : "./app/src",
	"output" : "./app/dist",

	"path" : {
		"css" : {
			"src" : ["/css/style.css"],
			"srcWatch" : "/css/**/*.css",
			"dest" : "/css",
			"filename" : "style.css"
		},
		"js" : {
			"src" : ["/js/libs/**/*.js"],
			"dest" : "/js",
			"filename" : "DOMLibrary.js"
		},
		"clean" : {
			"src" : "/dist/*"
		},
		"include" : {
			"src" : ["/src/html/**/*.html", "/include/*.html"],
			"dest" : "/dist/html"
		}
	},

	"cssLintRules" : {
		"import" : false,
		"ids": false
	},

	"cssReporterOption" : {
		"filename" : "csshint-report.html",
		"directory" : "./reports/"
	},

	"jsUglifyOptions" : {
		"mangle" : true, 
		"preserveComments" : "all"
	},

	"includeOption" : {
		"prefix" : "@@",
		"basepath" : "@file"
	}
}
